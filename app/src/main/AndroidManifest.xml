<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.redroundpanda.amadeus"
    tools:ignore="LockedOrientationActivity">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="ru.redroundpanda.amadeus.MainActivity"
            android:parentActivityName="ru.redroundpanda.amadeus.LaunchActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.redroundpanda.amadeus.LaunchActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.redroundpanda.amadeus.LaunchActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.redroundpanda.amadeus.SettingsActivity"
            android:label="Preferences"
            android:parentActivityName="ru.redroundpanda.amadeus.LaunchActivity"
            android:theme="@style/PreferenceTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.redroundpanda.amadeus.LaunchActivity" />
        </activity>

        <service
            android:name="ru.redroundpanda.amadeus.LoggerService"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <meta-data
                android:name="android.voice_interaction"
                android:resource="@xml/assist_service" />
            <intent-filter>
                <action android:name="android.service.voice.VoiceInteractionService" />
            </intent-filter>
        </service>
        <service
            android:name="ru.redroundpanda.amadeus.LoggerSessionService"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <!-- -->
        </service>
    </application>
</manifest>